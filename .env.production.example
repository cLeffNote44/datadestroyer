# Production Environment Configuration for Data Destroyer
# Copy to .env.production and set real values
# IMPORTANT: Keep this file out of version control!

# ============================================================================
# Core Django Settings
# ============================================================================
DJANGO_SETTINGS_MODULE=destroyer.settings
DJANGO_SECRET_KEY=REPLACE_WITH_A_LONG_RANDOM_SECRET_KEY_MIN_50_CHARS
DEBUG=False

# Hosts and CSRF
DJANGO_ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,www.yourdomain.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# HTTPS Security
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_PROXY_SSL_HEADER=1
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS (if you have a separate frontend domain)
DJANGO_CORS_ALLOWED_ORIGINS=https://yourfrontend.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=destroyer
POSTGRES_USER=destroyer
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://destroyer:REPLACE_WITH_SECURE_PASSWORD@db:5432/destroyer

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
REDIS_PASSWORD=

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# AWS/S3 Configuration (for media storage)
# ============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_BACKUP_BUCKET=destroyer-backups

# ============================================================================
# Monitoring and Error Tracking
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
GRAFANA_ROOT_URL=https://grafana.yourdomain.com

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ML_CLASSIFICATION=True
ENABLE_REAL_TIME_MONITORING=True
ENABLE_API_RATE_LIMITING=True

# ============================================================================
# Performance Settings
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
CELERY_WORKERS=4
